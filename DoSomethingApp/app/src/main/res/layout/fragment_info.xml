<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum"
        android:textSize="@dimen/text_large"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_below="@+id/title_view"
        android:id="@+id/description_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The quick brown fox jumps over the lazy dog."
        android:textSize="@dimen/text_small"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address_view"
        android:layout_below="@id/description_view"
        android:textAlignment="center"
        android:textSize="@dimen/text_small"
        android:text="2369 29a ave NW \n Edmonton, Alberta"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/distance_view"
        android:layout_below="@id/address_view"
        android:textAlignment="center"
        android:textSize="@dimen/text_small"
        android:text="5 Km Away"
        android:layout_marginBottom="8dp"/>


    <Button
        android:id="@+id/back_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="-8dp"
        android:layout_marginTop="8dp"
        android:text="Button" />
</RelativeLayout>
